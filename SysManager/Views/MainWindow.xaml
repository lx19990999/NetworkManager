<Window x:Class="SysManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SysManager.ViewModels"
        xmlns:local="clr-namespace:SysManager.Views"
        Title="网络管理" 
        SizeToContent="Height"
        Width="280"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        Deactivated="Window_Deactivated"
        Loaded="Window_Loaded">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        
        <!-- Inverse Boolean to Visibility Converter -->
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis" />
        
        <!-- Menu Item Style -->
        <Style x:Key="MenuItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#1A1A1A" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E5F3FF" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#CCE8FF" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#999999" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Submenu Arrow Style -->
        <Style x:Key="SubmenuItemStyle" TargetType="Button" BasedOn="{StaticResource MenuItemStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <TextBlock Text="▶" FontSize="8" HorizontalAlignment="Right" 
                                           VerticalAlignment="Center" Foreground="#666" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E5F3FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Section Header -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#333" />
            <Setter Property="Padding" Value="12,8,12,4" />
            <Setter Property="Background" Value="#F5F5F5" />
        </Style>
        
        <!-- Separator -->
        <Style x:Key="MenuSeparator" TargetType="Border">
            <Setter Property="Height" Value="1" />
            <Setter Property="Background" Value="#E0E0E0" />
            <Setter Property="Margin" Value="0" />
        </Style>
    </Window.Resources>

    <!-- Main Container - Menu Style -->
    <Border CornerRadius="4" Background="#FFFFFF" BorderBrush="#999" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.3" Direction="270" />
        </Border.Effect>
        
        <StackPanel>
            <!-- Ethernet Adapters Section -->
            <ItemsControl ItemsSource="{Binding NetworkInterfaces}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <!-- Separator -->
                            <Border Style="{StaticResource MenuSeparator}" />
                            <!-- Adapter Name -->
                            <TextBlock Text="{Binding Description}" Style="{StaticResource SectionHeader}" />
                            <!-- Separator -->
                            <Border Style="{StaticResource MenuSeparator}" />
                            <!-- Connect/Disconnect Button -->
                            <Button Style="{StaticResource MenuItemStyle}"
                                    Command="{Binding DataContext.ToggleConnectionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding}">
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="连接" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                    <Setter Property="Text" Value="断开" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <!-- Bluetooth Section -->
            <Border Style="{StaticResource MenuSeparator}" />
            <TextBlock Text="{Binding BluetoothAdapterName}" Style="{StaticResource SectionHeader}" />
            <Border Style="{StaticResource MenuSeparator}" />
            

            <Button x:Name="BluetoothDevicesBtn" Style="{StaticResource SubmenuItemStyle}" 
                    Click="BluetoothDevicesBtn_Click">
                <TextBlock Text="可连设备" />
            </Button>
            
            <!-- Bluetooth Devices List Popup -->
            <Popup x:Name="BluetoothListPopup" Placement="Right" PlacementTarget="{Binding ElementName=BluetoothDevicesBtn}"
                   StaysOpen="False" AllowsTransparency="True">
                <Border Background="White" BorderBrush="#999" BorderThickness="1" CornerRadius="4" 
                        MinWidth="200" MaxHeight="300">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.25" />
                    </Border.Effect>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding BluetoothDevices}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource MenuItemStyle}"
                                            Command="{Binding DataContext.ConnectBluetoothCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}">
                                        <Grid Width="180">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" FontWeight="Medium" />
                                                <TextBlock Text="{Binding DeviceType}" FontSize="10" Foreground="#666" />
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" VerticalAlignment="Center" FontSize="10">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="" />
                                                        <Setter Property="Foreground" Value="#666" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                                <Setter Property="Text" Value="已连接" />
                                                                <Setter Property="Foreground" Value="#0078D4" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsPaired}" Value="True">
                                                                <Setter Property="Text" Value="已配对" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Popup>
            
            <!-- WiFi Section -->
            <Border Style="{StaticResource MenuSeparator}" />
            <TextBlock Text="{Binding WifiAdapterName}" Style="{StaticResource SectionHeader}" />
            <Border Style="{StaticResource MenuSeparator}" />
            
            <!-- WiFi Connect/Disconnect -->
            <Button Style="{StaticResource MenuItemStyle}" Command="{Binding ToggleWifiCommand}" Visibility="{Binding IsWiFiConnected, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="{Binding WifiConnectionStatus}" />
            </Button>
            
            <Border Style="{StaticResource MenuSeparator}" />
            
            <!-- Available Networks - Submenu -->
            <Button x:Name="AvailableNetworksBtn" Style="{StaticResource SubmenuItemStyle}" 
                    Click="AvailableNetworksBtn_Click">
                <TextBlock Text="可用网络" />
            </Button>
            
            <!-- WiFi List Popup -->
            <Popup x:Name="WifiListPopup" Placement="Right" PlacementTarget="{Binding ElementName=AvailableNetworksBtn}"
                   StaysOpen="False" AllowsTransparency="True">
                <Border Background="White" BorderBrush="#999" BorderThickness="1" CornerRadius="4" 
                        MinWidth="200" MaxHeight="300">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.25" />
                    </Border.Effect>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding WiFiNetworks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource MenuItemStyle}"
                                            Command="{Binding DataContext.ConnectNetworkCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}">
                                        <Grid Width="180">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding SSID}" FontWeight="Medium" />
                                                <TextBlock FontSize="10" Foreground="#666">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="{Binding SecurityType}" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                                    <Setter Property="Text" Value="已连接" />
                                                                    <Setter Property="Foreground" Value="#0078D4" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Text="{Binding SignalBars}" 
                                                       FontFamily="Consolas" FontSize="9" Foreground="#0078D4"
                                                       VerticalAlignment="Center" />
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Popup>
            
            <Border Style="{StaticResource MenuSeparator}" />
            
            <!-- Connect to Hidden Network -->
            <Button Style="{StaticResource MenuItemStyle}" Command="{Binding ConnectHiddenNetworkCommand}">
                <TextBlock Text="连接到隐藏的WiFi网络" />
            </Button>
            
            <Border Style="{StaticResource MenuSeparator}" />
            
            <!-- Create New WiFi -->
            <Button Style="{StaticResource MenuItemStyle}" Command="{Binding CreateWifiNetworkCommand}">
                <TextBlock Text="新建wifi网络" />
            </Button>
            
            <Border Style="{StaticResource MenuSeparator}" />
            
            <!-- VPN Connection -->
            <Button Style="{StaticResource MenuItemStyle}" Command="{Binding VpnConnectionCommand}">
                <TextBlock Text="VPN连接" />
            </Button>
            
            <Border Style="{StaticResource MenuSeparator}" />
        </StackPanel>
    </Border>
</Window>
